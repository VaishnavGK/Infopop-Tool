{
  "manifest_version": 3,
  "name": "QuizWiz AI",
  "version": "1.0",
  "description": "Highlight text and ask AI via OpenRouter",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://openrouter.ai/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}